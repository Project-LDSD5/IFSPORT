    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            text-align: center;
        }

       .navbar {
      background-color:#BADABE;
      color: #ffffff;
      padding: 1em;
      text-align: center;
      
    }

    .nav-list {
      list-style: none;
      padding: 0;
    }

    .nav-item {
      display: inline;
      margin-right: 20px;
    }

    .nav-item a {
      text-decoration: none;
      color: #3ac458;
      font-weight: bold;
    }

    .nav-item a:hover {
      color: #0a7500;
    }

    .navbar-brand{
      font-family: fantasy;
      color: #025008;
      font-size: xx-large;
       font-style: italic; 
    }

     .event-form-container {
      text-align: center;
      margin: 0 auto;
      padding-top: 90px;
      background-color: #ffffff;
    }

    .form-group {
      margin-bottom: 15px;
    }

    label {
      font-weight: bold;
      display: block;
    }

    input{
      border-radius: 5px;
      border-color: rgba(185, 0, 185, 0.445)BE;
    }

    /* Largura específica para os inputs em computadores */
    #sport,
    #hostTeam,
    #visitingTeam,
    #eventTime,
    #dateEvent,
    #eventsPlace {
    width: 20%; 
    }

    .btn-submit {
      background-color: #1cac28;
      color: #ffffff;
      padding: 10px 20px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

  .btn-submit:hover {
    background-color: #0056b3;
  }

      table {
          width: 100%;
          border-collapse: collapse;
          margin-top: 20px;
      }

      table,
      th,
      td {
          border: 1px solid #ddd;
      }

      th,
      td {
          padding: 8px;
          text-align: left;
      }

      th {
          background-color: #f2f2f2;
      }

      th,
      td,
      button {
          font-size: 14px;
      }

    button {
        background-color: #ff0000;
        color: #fff;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
     }
      
    .widget-tabela {
        height: 400px;      
        overflow-y: scroll;
    }

    .col-lg-7 {
       background-color: #cc005f;
    }

    .linha {
         width: 80%;
         text-align: center;
         margin: 0 auto;
         font-weight: bold;
     }

    .tabela {
        width: 80%;
        margin: 0 auto;
     }
      
    .notici {
        width: 90%;
        text-align: center;
        padding-left: 100px;
      }

    .titnoti {
      color: #1cac28;
     }

   .container-card{
     width: 80%;
     height: 20%;
     margin: 0 auto;
    }

    .card-text{
    text-align: end;
    }

   .card-with-background{
    width: 100%;
    height: 80%;
    background-image: url('');
    background-size: cover;
    }

    h2{
      color:#1cac28;
    }

   .eventos-container{
      width:80%;
      margin: 0 auto;
   }

    .table-container { 
        background-color: #BADABE;
        color: #000;
        margin: 0 auto;         
    }  
      
    .table-container th,
    .table-container td {
      padding: 10px; 
      border: 1px solid #ddd; 
    }
      
    .table-container th {
        background-color: #f2f2f2; 
        font-weight: bold; 
    } 

    .btn-container {
      margin-top: 20px; 
    }
                 
    </style>
</head>

<body>
    <body>
   <nav class="navbar navbar-light fixed-top">
  <div class="container-fluid">
