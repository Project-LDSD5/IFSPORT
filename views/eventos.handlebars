                            </li>
                            <li><a class="dropdown-item" href="#">Outros</a></li>
                        </ul>
                    </li>
  </div>
  <br><br>
  <div class="eventos-container">
    <h2>Eventos Próximos</h2>
    <div class="table-container">
      <table>
        <tr>
          <th>Esporte</th>
          <th>Time da Casa</th>
          <th>Pontuação Casa</th>
          <th>Time Visitante</th>
          <th>Pontuação Visitante</th>
          <th>Horário do Evento</th>
          <th>Local do Evento</th>
        </tr>

        {{#each events}}
        <tr>
          <td>{{dataValues.sport}}</td>
          <td>{{dataValues.hostTeam}}</td>
          <td>{{dataValues.hostTeamScore}}</td>
          <td>{{dataValues.visitingTeam}}</td>
          <td>{{dataValues.visitingTeamScore}}</td>
          <td>{{dataValues.eventTime}}</td>
          <td>{{dataValues.eventsPlace}}</td>
        </tr>
        {{/each}}

      </table>
    </div>
    </div>
