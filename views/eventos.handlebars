    }

    th {
      background-color: #f2f2f2;
    }

    td{
      color: #fff;
    }

    th,
    td,
    button {
      font-size: 14px;
    }

    button {
      background-color: #ff0000;
      color: #fff;
      border: none;
      padding: 5px 10px;
      cursor: pointer;
    }

    .container-card {
      width: 80%;
      height: 20%;
      margin: 0 auto;
    }

    .card-text {
      text-align: end;
    }

