        .table-container {
      background-color: #7a7a7a;
      color: #000;
      margin: 0 auto;
       border-radius: 20px;
      /* Centraliza a tabela no centro da página /
          border-collapse: collapse; / Remove espaçamento entre células da tabela /
          width: 100%; / Largura da tabela, ajuste conforme necessário */
    }

    /* Estilos para as células da tabela */
    .table-container th,
    .table-container td {
      padding: 10px;
      /* Espaçamento interno das células */
      border: 1px solid #333333;
       border-radius: 10px;
      /* Borda das células */
    }

    /* Estilos para o cabeçalho da tabela */
    .table-container th {
      background-color: #00a30e;
      /* Cor de fundo do cabeçalho */
      font-weight: bold;
      /* Texto em negrito no cabeçalho */
    }

